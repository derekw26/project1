<%= form_for [@workout, @round] do |f| %>

  <%= f.hidden_field :workout_id, value: @workout.id %>

  <%= f.label :exercise %>
  <%= f.select :exercise_id, Exercise.pluck(:name, :id) %>

  <%= f.label :sets, "Number of sets" %>
  <%= f.text_field :sets %>

  <%= f.label :reps, "Number of reps" %>
  <%= f.text_field :reps %>

  <%= f.label :time, "Time" %>
  <%= f.text_field :time %>

  <%= f.submit %>
<% end %>
