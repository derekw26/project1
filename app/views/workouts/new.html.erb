<h1 class="mt-5 animate__animated animate__bounce">Create Workout</h1>

<%= form_for @workout do |f| %>
  <%= f.label :name, :class => 'form-label'%>
  <%= f.text_field :name, :required => true, :class => 'form-control' %>

  <%= f.submit "Create", :class => 'mt-3 btn btn-primary btn-lg' %>
<% end %>
